<p>
	<small><%= link_to 'Admin Dashboard', admin_root_path %> << 
	Edit Entry Form</small>
</p>

<h3>Tasks:</h3>
<ul><% Task.find(:all).each do |task| %>
	<li><%= task.tag %>
	<small><%= link_to 'Delete', task,
				:confirm => 'Are you sure?  Doing so will remove the tag "' + task.tag + '" from all referenced entries.',
				:method => :delete %></small></li>
	<% end %>
</ul>
  
<%= form_for(Task.new) do |f| %>
	<% f.error_messages %>

	<div class="field">
		<%= f.text_field :tag %>
	</div>
	<div class="actions">
		<%= f.submit "Add Task" %>
	</div>
<% end %> 


